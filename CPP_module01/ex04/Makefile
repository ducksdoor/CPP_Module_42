DEF_COLOR =		\033[0;39m
GRAY =			\033[0;90m
RED =			\033[0;91m
REDP =    		\033[1;91m
YELLOW =		\033[0;93m
GREEN =			\033[0;92m
BLUE =          \033[0;94m
BROWN = 		\033[0;33m

NAME = files

CC = c++

CFLAG = -std=c++98 -Wall -Wextra -pedantic

SOURCES = main.cpp

OBJECT = $(SOURCES:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJECT)
	@$(CC) $(CFLAG) $(OBJECT) -o $(NAME)
	@echo " $(BROWN)__________________________________________________"
	@echo "|____________________________________________________|$(DEF_COLOR)"
	@echo "|$(YELLOW) __ $(DEF_COLOR)    __   ____   ___ ||  ____    ____     _  __  |"
	@echo "|$(YELLOW)|  |$(DEF_COLOR)__ |--|_| || |_|LOR|||_|**|*|__|+|+||___| ||  | |"
	@echo "|$(YELLOW)|==|$(DEF_COLOR)^^||--| |=||=| |=*=||| |~~|~|  |=|=|| | |~||==| |"
	@echo "|$(YELLOW)|  |$(DEF_COLOR)##||  | | || | |TEG|||-|  | |==|+|+||-|-|~||__| |"
	@echo "|$(YELLOW)|__|$(DEF_COLOR)__||__|_|_||_|_|A-_|||_|__|_|__|_|_||_|_|_||__|_|"
	@echo "||_______________________||__________________________|"
	@echo "| _____________________  ||      __   __  _ $(BLUE) __ $(DEF_COLOR)   _ |"
	@echo "||=|=|=|=|=|=|=|=|=|=|=| __..\/ |  |_|  ||#|$(BLUE)|==|$(DEF_COLOR)  / /|"
	@echo "|| | | | | | | | | | | |/\ \ \ \|++|=|  || |$(BLUE)|==|$(DEF_COLOR) / / |"
	@echo "||_|_|_|_|_|_|_|_|_|_|_/_/\_.___\__|_|__||_|$(BLUE)|__|$(DEF_COLOR)/_/__|"
	@echo "|____________________ /\~$(REDP)()$(DEF_COLOR)/$(REDP)()$(DEF_COLOR)~//\ __________________|"
	@echo "|$(RED) __$(DEF_COLOR)   __    _  _     \_  (_ .  _/ _    ___     _____|"
	@echo "|$(RED)|~~|$(DEF_COLOR)_|..|__| || |_ _   \ $(GRAY)//\\ $(DEF_COLOR) /  |=|__|~|~|___| | | |"
	@echo "|$(RED)|--|$(DEF_COLOR)+|^^|==|1||2| | |__/\ __ /\__| |==|x|x|+|+|=|=|=|"
	@echo "|$(RED)|__|$(DEF_COLOR)_|__|__|_||_|_| /  \ \  / /  \_|__|_|_|_|_|_|_|_|"
	@echo "|_________________ _/    \/\/\/    \_ _______________|"
	@echo "| _____   _   __  |/      \../      \|  __   __   ___|"
	@echo "||_____|_| |_|##|_||   |   \/ __|   ||_|==|_|++|_|-|||"
	@echo "||______||=|#|--| |\   \   o    /   /| |  |~|  | | |||"
	@echo "||______||_|_|__|_|_\   \  o   /   /_|_|__|_|__|_|_|||"
	@echo "|_________ __________\___\____/___/___________ ______|"
	@echo "|__    _  /    ________     ______           /| _ _ _|"
	@echo "|\ \  |=|/   //    /| //   /  /  / |        / ||%|%|%|"
	@echo "| \/\ |*/  .//____//.//   /__/__/ (_)      /  ||=|=|=|"
	@echo "|  \/\|/   /(____|/ //                    /  /||~|~|~|"
	@echo "|___\_/   /________//   ________         /  / ||_|_|_|"
	@echo "|___ /   (|________/   |\_______\       /  /  ||_____|"
	@echo "     /                  \|________)     /  /  ||"


%.o: %.cpp
	$(CC) $(CFLAG) -c $< -o $@


clean:
	rm -f $(OBJECT)
	@echo "\n${GRAY} ◎ $(RED)All objects and executable cleaned successfully${GRAY} ◎$(DEF_COLOR)\n"

fclean:			clean
				$(RM) $(NAME)

re: fclean all 


.PHONY:			all clean fclean re test